<!DOCTYPE html>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
	<div class="box-name">
	  <i class="fa fa-user"></i>
	  <span>List Of User Accounts</span>
	</div>
	<div class="no-move"></div>
      </div>
      <div class="box-content">
	<table class='table'>
          <tr>
            <th>ID</th>
            <th>Username</th>	    
	    <th></th>
          </tr>

          <% _.each(users, function(user){ %>
          <tr data-id="<%= user.id%>" data-model="user">
            <td><%= user.id %></td>
	    <td><%= user.username %></td>
            <td>
	      <a href="/user/show/<%=user.id %>" class="btn btn-sm btn-primary">Show</a>
              <a href="/user/edit/<%=user.id %>" class="btn btn-sm btn-warning">Edit</a>
	      <a href="/user/changePwd/<%=user.id %>" class="btn btn-sm btn-warning">Change password</a>
	      <a href="/user/destroy/<%=user.id %>" class="btn btn-sm btn-danger">Delete</a>
          </tr>
          <% }) %>
	</table>
	<div style="text-align: center">
	  <a href="/user/new" class="btn btn-sm btn-primary">Add user</a>
	</div>
      </div>
    </div>
  </div>
</div>
