<!DOCTYPE html>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
	<div class="box-name">
	  <i class="fa fa-user"></i>
	  <span>List Of User Accounts</span>
	</div>
	<div class="no-move"></div>
      </div>
      <div class="box-content">
	<table class='table'>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Username</th>	    
            <th>Email</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

          <% _.each(users, function(user){ %>
          <tr data-id="<%= user.id%>" data-model="user">
            <td><%= user.id %></td>
            <td><%= user.name %></td>
	    <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><a href="/user/show/<%=user.id %>" class="btn btn-sm btn-primary">Show</a></td>
            <td><a href="/user/edit/<%=user.id %>" class="btn btn-sm btn-warning">Edit</a></td>

            <td><form action="/user/destroy/<%=user.id %>" method="POST">
                <input type="hidden" name="_method" value="delete"/>
                <input type="submit" class="btn btn-sm btn-danger" value="Delete"/>
                <input type="hidden" name="_csrf" value="<%=_csrf %>"/> 
            </form></td>
          </tr>
          <% }) %>
	</table>
	<div style="text-align: center">
	  <a href="/user/new" class="btn btn-sm btn-primary">Add user</a>
	</div>
      </div>
    </div>
  </div>
</div>
