<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
	<div class="box-name">
	  <i class="fa fa-user"></i>
	  <span>User Profile</span>
	</div>
	<div class="no-move"></div>
      </div>
      <div class="box-content">
	<div class="card">
	  <h4 class="page-header">
	    <%= user.name %>
	  </h4>
	  <div style="background-image: url('/devoops/img/avatar.jpg'); background-repeat: no-repeat; background-position-x: right; background-size: 80px;">
	    <label class="col-sm-4 control-label">Username</label>
	    <p class="col-sm-8"><%= user.username %></p>
	    <label class="col-sm-4 control-label">Email</label>
	    <p class="col-sm-8"><%= user.email %></p>
	    <% if(session.User.admin) { %>
	      <label class="col-sm-4 control-label">Admin</label>
	      <p class="col-sm-8"><%= user.admin %></p>
	      <label class="col-sm-4 control-label">Manager</label>
	      <p class="col-sm-8"><%= user.manager %></p>
	      <label class="col-sm-4 control-label">Sales</label>
	      <p class="col-sm-8"><%= user.sales %></p>
	      <label class="col-sm-4 control-label">Purchasing</label>
	      <p class="col-sm-8"><%= user.purchasing %></p>
	      <label class="col-sm-4 control-label">Quality Check</label>
	      <p class="col-sm-8"><%= user.quality_check %></p>
	      <label class="col-sm-4 control-label">Packing</label>
	      <p class="col-sm-8"><%= user.packing %></p>
	      <label class="col-sm-4 control-label">Documentation</label>
	      <p class="col-sm-8"><%= user.documentation %></p>
	      <label class="col-sm-4 control-label">Accounts Payable</label>
	      <p class="col-sm-8"><%= user.accounts_payable %></p>
	      <label class="col-sm-4 control-label">Accounts Receivable</label>
	      <p class="col-sm-8"><%= user.accounts_receivable %></p>
	    <% } %>
	    <p class="text-center">
	      <a class="btn btn-primary" href="/user/edit/<%=user.id %>">Edit</a>
	    </p>
	  </div>
	</div>
      </div>
    </div>
  </div>  
</div>
