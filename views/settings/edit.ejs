<!DOCTYPE html>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
	<div class="box-name">
	  <i class="fa fa-wrench"></i>
	  <span>Application Settings</span>
	</div>
	<div class="no-move"></div>
      </div>
      <div class="box-content">
        <div class="card">
          <form id="settingsForm" action="/settings/update/" method="POST" class="form-horizontal">
	    <% _.each(settings, function(pair){ %>
	    <div class="form-group">
	      <div class="col-sm-3">
	        <input type="text" class="form-control" name="<%=pair.key %>" value="<%=pair.key %>" />
	      </div>
	      <div class="col-sm-9">
	        <input type="text" class="form-control" name="<%=pair.key %>value" value="<%=pair.value %>" />
	      </div>
	    </div>
	    <% }) %>
	    <div class="form-group">
	      <div class="col-sm-3">
	        <input type="text" class="form-control" name="newkey" placeholder="enter new key" />
	      </div>
	      <div class="col-sm-9">
	        <input type="text" class="form-control" name="newvalue" placeholder="enter new value" />
	      </div>
	    </div>
	    <input type="hidden" name="_csrf" value="<%= _csrf %>">
	    <div class="form-group">
	      <div class="text-center">
	    	<button type="submit" class="btn btn-primary">Save changes</button>
	      </div>
	    </div>
	  </form>
	</div>
      </div>
    </div>
  </div>  
</div>
