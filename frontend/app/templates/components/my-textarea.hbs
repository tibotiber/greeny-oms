{{#if autolabel}}
  <div class="row form-group">
    <label {{bind-attr class=":control-label labelClass"}}>{{label}}</label>
    <div {{bind-attr class="inputClass"}}>
      {{#if ph}}
        {{textarea class="form-control hastip" name=id value=val placeholder=ph focus-out="visited" title=ph rows=rows}}
      {{else}}
        {{textarea class="form-control" name=id value=val focus-out="visited" rows=rows}}
      {{/if}}
    </div>
    {{#if error}}
      <div class="alert alert-info">{{error}}</div>
    {{/if}}
  </div>
{{else}}
  {{#if ph}}
    {{textarea class="form-control hastip" name=id value=val placeholder=ph focus-out="visited" title=ph rows=rows}}
  {{else}}
    {{textarea class="form-control" name=id value=val focus-out="visited" rows=rows}}
  {{/if}}
  {{#if error}}
    <div class="alert alert-info">{{error}}</div>
  {{/if}}
{{/if}}
