<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
	<div class="box-name">
	  <i class="fa fa-ticket"></i>
	  <span>Need Some Help? Post A Support Ticket...</span>
	</div>
	<div class="no-move"></div>
      </div>
      <div class="box-content">
        <div class="card">
          {{#my-form form=this id="supportForm" action="post" buttonLabel="Submit this support ticket"}}
            <div class="row form-group">
	      <div class="col-sm-10 col-sm-offset-1">
                {{view 'select' value=type content=typeOptions
                optionValuePath="content.value"
                optionLabelPath="content.label"
                prompt="-- What can we help you with? --"
                class="form-control"}}
	      </div>
	    </div>
	    <div class="row form-group">
	      <div class="col-sm-10 col-sm-offset-1">
		{{view 'select' value=frequency content=frequencyOptions
                optionValuePath="content.value"
                optionLabelPath="content.label"
                prompt="-- Is the problem frequent? --"
                class="form-control"}}
	      </div>
	    </div>
	    <div class="row form-group">
              {{my-input id='subject' ph="Subject" wrapperClass='col-sm-10 col-sm-offset-1'}}
	    </div>
	    <div class="row form-group">
	      <div class="col-sm-10 col-sm-offset-1">
		{{textarea class="form-control" value=description rows="10" placeholder="Describe your issue here..."}}
	      </div>
	    </div>
	    <div class="row form-group">
	      <div class="col-sm-10 col-sm-offset-1">
		{{textarea class="form-control" value=error rows="5" placeholder="If an error was returned, please copy it here..."}}
	      </div>
	    </div>
          {{/my-form}}
          {{#if errorMessage}}
            <div class="alert alert-danger">
              <p>
                <strong>Login failed ({{attempts}}):</strong> <code>{{errorMessage}}</code>
              </p>
            </div>
          {{/if}}
          {{#if successMessage}}
            <div class="alert alert-success">
              <p>
                <strong>Your support ticket has been posted!</strong>
                <br/>
                <code>{{successMessage}}</code>
              </p>
            </div>
          {{/if}}
	</div>
      </div>
    </div>
  </div>  
</div>
