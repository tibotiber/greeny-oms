<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
	<div class="box-name">
	  <i class="fa fa-ticket"></i>
	  <span>Need Some Help? Post A Support Ticket...</span>
	</div>
	<div class="no-move"></div>
      </div>
      <div class="box-content">
        <div class="card">
          {{#my-form form=this id="supportForm" action="post" buttonLabel="Submit this support ticket" inputWrapperClass="col-sm-10 col-sm-offset-1"}}
          <div class="row form-group">
            {{my-select id='type' content=typeOptions ph='What can we help you with?' nolabel=true}}
	  </div>
          <div class="row form-group">
            {{my-select id='frequency' content=frequencyOptions ph='Is the problem frequent?' nolabel=true}}
	  </div>
          <div class="row form-group">
            {{my-input id='subject' ph='Subject' nolabel=true}}
	  </div>
          <div class="row form-group">
            {{my-textarea id='description' rows='10' ph='Describe your issue here...' nolabel=true}}
	  </div>
          <div class="row form-group">
            {{my-textarea id='error' rows='5' ph='If an error was returned, please copy it here...' nolabel=true}}
          </div>
	  {{/my-form}}
          {{please-wait loading=loading msg="Processing..." }}
          {{#if errorMessage}}
            <div class="alert alert-danger">
              <p>
                <strong>Post failed ({{attempts}}):</strong> <code>{{errorMessage}}</code>
              </p>
            </div>
          {{/if}}
          {{#if successMessage}}
            <div class="alert alert-success text-center">
              <p><strong>Your support ticket has been posted!</strong></p>
            </div>
          {{/if}}
	</div>
      </div>
    </div>
  </div>  
</div>
