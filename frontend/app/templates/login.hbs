<div id="page-login" class="row">
  <div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    <div class="box">
      <div class="box-content">
	<div class="text-center">
	  <h3 class="page-header">Greeny OMS Login</h3>
	</div>
	<form id="loginForm" class="form-signin" {{action 'authenticate' on='submit'}}>
	  <div class="form-group">
	    <label class="control-label" for="identification">Username</label>
	    {{input id='identification' value=identification type="text" class="form-control" }}
	  </div>
	  <div class="form-group">
	    <label class="control-label" for="password">Password</label>
	    {{input id='password' type="password" value=password class="form-control" }}
	  </div>
	  <div class="text-center">
	    <button type="submit" class="btn btn-primary">Sign-in</button>
	  </div>
	</form>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  $(document).ready(function() {
    LoginFormValidator();
  });
</script>
